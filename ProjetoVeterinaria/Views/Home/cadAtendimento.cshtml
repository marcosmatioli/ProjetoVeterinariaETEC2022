@model ProjetoVeterinaria.Models.modelAtendimento

@{
    ViewBag.Title = "Cadastro de Atendimento do Animal";
    Layout = null;
}
<meta charset='UTF-8'>
<link rel="stylesheet" href="~/Content/styleLogin.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

@using (Html.BeginForm("cadAtendimento", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <section class="ftco-section" style="padding: 2em 0;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url(/Imagens/rosaAtendimento.jpg);">
                        </div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Cadastro de Atendimendo do Pet</h3>
                                </div>
                            </div>
                            <form action="#" class="signin-form">                                
                                <div class="form-group mb-3">
                                    <label class="label" for="vet">Selecione o Veterinario que atendeu</label>
                                    @Html.DropDownListFor(model => model.codVet, ViewBag.Vet as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control", id = "vet", style= "border: 2px solid #a2ddd2 !important;box-shadow: none !important;" })
                                    @Html.ValidationMessageFor(x => x.codVet, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="pet">Escolha o Pet</label>
                                    @Html.DropDownListFor(model => model.codAnimal, ViewBag.Animal as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control", id = "pet",style= "border: 2px solid #a2ddd2 !important;box-shadow: none !important;" })
                                    @Html.ValidationMessageFor(x => x.codAnimal, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="data">Data do Atendimento</label>
                                    @Html.EditorFor(x => x.dataAtendimento, new { htmlAttributes = new { id = "data", type = "date", @class = "form-control", placeholder = "Data do Atendimento", required = "required", maxlength = "100" } })
                                    @Html.ValidationMessageFor(x => x.dataAtendimento, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="hora">Hora do Atendimento</label>
                                    @Html.EditorFor(x => x.horaAtendimento, new { htmlAttributes = new { id = "hora", type = "time", @class = "form-control", placeholder = "Hora do Atendimento", required = "required", maxlength = "100" } })
                                    @Html.ValidationMessageFor(x => x.horaAtendimento, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="diag">Diagnostico</label>
                                    @Html.EditorFor(x => x.Diagnostico, new { htmlAttributes = new { id = "diag", type = "text", @class = "form-control", placeholder = "Diagnóstico", required = "required", maxlength = "100" } })
                                    @Html.ValidationMessageFor(x => x.Diagnostico, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Cadastrar</button>
                                </div>
                            </form>
                            <a href="~/Home/About" class="form-control btn btn-primary rounded submit px-3">Voltar</a>
                            @ViewBag.msg
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}