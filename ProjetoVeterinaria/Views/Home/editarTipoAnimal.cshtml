@model ProjetoVeterinaria.Models.modelTipoAnimal
@{
    ViewBag.Title = "Editar tipo de Animal";
}

<h2>Editar Tipo de Animal</h2>

@using (Html.BeginForm("editarTipoAnimal", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.LabelFor(m => m.tipoAnimal) /*aqui referencio ao ModelPaciente para fazer aparecer o que esta lá*/
    <br />
    @Html.EditorFor(m => m.tipoAnimal)
    <br />
    <br />
    <input type="submit" value="Atualizar" class="btn btn-primary" />
}
<br />
<br />
@ViewBag.msg


@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}