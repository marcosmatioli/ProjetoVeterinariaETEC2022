@model IEnumerable<ProjetoVeterinaria.Models.modelAnimal>

@{
    ViewBag.Title = "Lista de Pets";
}
<br />
<div class="">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-center">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem;">
                    @if (@item.fotoAnimal != null)
                    {<img class="card-img-top" data-src=" " alt="Thumbnail" src="@item.fotoAnimal" style="width:100%;height:300px" data-holder-rendered="true">}
                    else
                    {<img class="card-img-top" data-src=" " alt="Thumbnail" src="~/Imagens/image-not-found.jpg" style="width:300%;height:300px" data-holder-rendered="true">}
                    
                    <div class="card-body">
                            <h5 class="card-title">Pet: @Html.DisplayFor(modelItem => item.nomeAnimal)</h5>
                        </div>
                   
                    <div class="card-body">
                        @Html.ActionLink("Atualizar", "editarAnimal", new { id = item.codAnimal }) |
                        @Html.ActionLink("Excluir", "excluirAnimal", new { id = item.codAnimal }, new { onclick = "return confirm('Deseja realmente excluir?');" })

                        @*<a href="#" class="card-link">Card link</a>
                         <a href="#" class="card-link">Another link</a>*@
                    </div>
                    </div>
                    }

                </div>
            </div>
</div>


