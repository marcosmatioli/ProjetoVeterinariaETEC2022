@model ProjetoVeterinaria.Models.modelAgendamento

@{
    ViewBag.Title = "Alterar data do Agendamento";
}

@using (Html.BeginForm("editarAgendamento", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <br />
    @Html.Label("Alterar consulta para o animal")
    <br />
    <br />
    @Html.Label("Selecione o seu Veterinario que irá atender")
    <br />
    @Html.DropDownList("Vet", "Escolha o Veterinario");
    <br />
    <br />
    @Html.Label("Escolha o animal a ser atendido")
    <br />
    @Html.DropDownList("Animal", "Escolha o Animal");
    <br />
    <br />
    @Html.Label("Data da consulta");
    <br />
    @Html.EditorFor(m => m.dataAgendamento, new { htmlAttributes = new { @type = "date" } });//time ou data
    <br />
    <br />
    @Html.Label("Hora da consulta");
    <br />
    @Html.EditorFor(m => m.horaAgendamento, new { htmlAttributes = new { @type = "time" } });//time ou data
    <br />
    <br />
    @Html.Label("Reclamação do animal");
    <br />
    @Html.EditorFor(m => m.Reclamacao);
    <br />
    <br />
    <input type="submit" value="Alterar Consulta" class="btn btn-primary" />
}
<br />
<br />
@ViewBag.Message
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}